{
  "name": "shubot",
  "version": "1.0.0",
  "description": "A Discord bot for Shurelya",
  "scripts": {
    "dev": "ts-node-dev -P tsconfig.json --respawn --transpile-only -r dotenv/config -- src/index.ts",
    "lint": "eslint --ignore-path .gitignore --fix ./**/*.ts",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Arimil",
  "license": "ISC",
  "dependencies": {
    "async-mutex": "^0.3.2",
    "axios": "^0.26.1",
    "better-sqlite3": "^7.5.0",
    "dateformat": "^5.0.3",
    "discord.js": "^13.6.0",
    "entities": "^3.0.1",
    "googleapis": "^100.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "@types/dateformat": "^3.0.1",
    "@types/node": "^17.0.23",
    "@types/ws": "^8.5.3",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ignore-path .gitignore --fix ",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/Shubot.tar.gz"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' src/index.ts && npm run build && cd build && cp ../package.json ./ && cp ../package-lock.json ./ && tar -czf Shubot.tar.gz *"
        }
      ]
    ]
  }
}
