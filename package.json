{
  "name": "shubot",
  "version": "1.0.0",
  "description": "A Discord bot for Shurelya",
  "scripts": {
    "dev": "ts-node-dev -P tsconfig.json --respawn --transpile-only -r dotenv/config -- src/index.ts",
    "lint": "eslint --ignore-path .gitignore --fix ./**/*.ts",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Arimil",
  "license": "ISC",
  "dependencies": {
    "async-mutex": "^0.4.0",
    "axios": "^1.4.0",
    "better-sqlite3": "^8.4.0",
    "dateformat": "4.6.3",
    "discord.js": "^14.11.0",
    "entities": "^4.5.0",
    "googleapis": "^121.0.0",
    "xml2js": "^0.6.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/dateformat": "^3.0.1",
    "@types/node": "^20.4.1",
    "@types/ws": "^8.5.5",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ignore-path .gitignore --fix ",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/Shubot.tar.gz"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' src/index.ts && npm run build && cd build && cp ../package.json ./ && cp ../package-lock.json ./ && tar -czf Shubot.tar.gz *"
        }
      ]
    ]
  }
}
