{
  "name": "shubot",
  "version": "1.0.0",
  "description": "A Discord bot for Shurelya",
  "scripts": {
    "dev": "ts-node-dev -P tsconfig.json --respawn --transpile-only -r dotenv/config -- src/index.ts",
    "lint": "eslint --ignore-path .gitignore --fix ./**/*.ts",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Arimil",
  "license": "ISC",
  "dependencies": {
    "async-mutex": "^0.3.2",
    "axios": "^0.25.0",
    "better-sqlite3": "^7.5.0",
    "dateformat": "^4.6.3",
    "discord.js": "^13.6.0",
    "entities": "^3.0.1",
    "googleapis": "^92.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.4.2",
    "@types/dateformat": "^3.0.1",
    "@types/node": "^17.0.10",
    "@types/ws": "^8.2.2",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.1",
    "dotenv": "^14.2.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ignore-path .gitignore --fix ",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/Shubot.tar.gz"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' src/index.ts && npm run build && cd build && cp ../package.json ./ && cp ../package-lock.json ./ && tar -czf Shubot.tar.gz *"
        }
      ]
    ]
  }
}
