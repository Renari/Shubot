{
  "name": "shubot",
  "version": "1.0.0",
  "description": "A Discord bot for Shurelya",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev -P tsconfig.json --respawn --transpileOnly -r dotenv/config -- src/index.ts",
    "lint": "eslint --fix ./**/*.ts",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Arimil",
  "license": "ISC",
  "dependencies": {
    "async-mutex": "^0.2.2",
    "axios": "^0.19.2",
    "dateformat": "^3.0.3",
    "discord.js": "^12.2.0",
    "entities": "^2.0.3",
    "googleapis": "^59.0.0",
    "nedb": "^1.8.0",
    "pixiv-app-api": "^1.2.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/dateformat": "^3.0.1",
    "@types/nedb": "^1.8.9",
    "@types/ws": "^7.2.4",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "lint-staged": "^9.5.0",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ignore-path .gitignore --fix ",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/Shubot.tar.gz"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' src/index.ts && npm run build && cd build && cp ../package.json ./ && cp ../package-lock.json ./ && tar -czf Shubot.tar.gz *"
        }
      ]
    ]
  }
}
