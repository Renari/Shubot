{
  "name": "shubot",
  "version": "1.0.0",
  "description": "A Discord bot for Shurelya",
  "scripts": {
    "dev": "ts-node-dev -P tsconfig.json --respawn --transpile-only -r dotenv/config -- src/index.ts",
    "lint": "eslint --ignore-path .gitignore --fix ./**/*.ts",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Arimil",
  "license": "ISC",
  "dependencies": {
    "async-mutex": "^0.5.0",
    "axios": "^1.7.2",
    "better-sqlite3": "^11.0.0",
    "dateformat": "5.0.3",
    "discord.js": "^14.15.3",
    "entities": "^4.5.0",
    "googleapis": "^140.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/dateformat": "^5.0.2",
    "@types/node": "^20.14.6",
    "@types/ws": "^8.5.10",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --ignore-path .gitignore --fix ",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/Shubot.tar.gz"
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' src/index.ts && npm run build && cd build && cp ../package.json ./ && cp ../package-lock.json ./ && tar -czf Shubot.tar.gz *"
        }
      ]
    ]
  }
}
